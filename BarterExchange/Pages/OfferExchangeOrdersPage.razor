@page "/offer-exchange-orders"

@inject ExchangeOrderService ExchangeOrderService
@inject UserService UserService

@if(ExchangeOrderService.ValueItemType == 0)
{
    @if(ExchangeOrderService.IsSenderOrders)
    {
        <OrderListComponent AllExchangeOrders="ExchangeOrderService.GetCreatedExchangeOrders(UserService.CurrentUser.Email)" IsOfferOrders="true"></OrderListComponent>
    }
    else
    {
        <OrderListComponent AllExchangeOrders="ExchangeOrderService.GetCreatedExchangeOrders(ExchangeOrderService.CurrentExchangeOrder.CreatorEmail)" IsOfferOrders="true"></OrderListComponent>
    }
}
else
{
    <OrderListComponent RecomendedOrders="ExchangeOrderService.GetRelevantExchnageOrders(UserService.CurrentUser.Email, ExchangeOrderService.ValueItemType)" IsOfferOrders="true"></OrderListComponent>
}
