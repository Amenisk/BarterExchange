@page "/order-menu"
@inject UserService UserService
@inject NavigationManager Navigation

@if (UserService.IsAuthorized())
{
    <div class="card" style="width: 50%; margin: 100px 25% 0 25%">
        <div class="card-body">
            <div class="form-group" style="display: flex; justify-content:center">
                <button name="regButton" class="btn btn-primary" style="margin: 5%; font-size: 36px" @onclick=GoToCreatedOrdersPage>Созданные обмены</button>
            </div>
            <div class="form-group" style="display: flex; justify-content:center">
                <button name="regButton" class="btn btn-primary" style="margin: 5%; font-size: 36px" @onclick=GoToConductedOrdersPage>Проведённые обмены</button>
            </div>
        </div>
    </div>
}
else
{
    <div class="modal-body">
        <h5>Авторизируйтесь</h5>
        <p>Чтобы просмотреть свои обмены, нужно сначала авторизироваться</p>
        <p><button class="btn btn-secondary popover-test" @onclick=NavigateToAuthorization>Авторизоваться</button></p>
    </div>
}


@code {
    public void GoToCreatedOrdersPage()
    {
        Navigation.NavigateTo("/created-orders");
    }

    public void GoToConductedOrdersPage()
    {
        Navigation.NavigateTo("/conducted-orders");
    }

    public void NavigateToAuthorization()
    {
        Navigation.NavigateTo("/authorization");
    }
}
